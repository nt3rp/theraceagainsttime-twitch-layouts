{
  "name": "theraceagainsttime-twitch-layouts",
  "version": "0.0.1",
  "description": "HTML-based OBS layouts and widgets for the Race Against Time's stream",
  "repository": "git@github.com:nt3rp/theraceagainsttime-twitch-layouts.git",
  "author": "Nick Terwoord <me@nt3rp.io>",
  "license": "MIT",
  "scripts": {
    "watch:dashboard": "parcel watch 'src/dashboard/*.html' --dist-dir='dashboard' --public-url='.'",
    "build:dashboard": "parcel build 'src/dashboard/*.html' --dist-dir='dashboard' --public-url='.'",
    "watch:graphics": "parcel watch 'src/graphics/*.html' --dist-dir='graphics' --public-url='.'",
    "build:graphics": "parcel build 'src/graphics/*.html' --dist-dir='graphics' --public-url='.'"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  },
  "devDependencies": {
    "@parcel/optimizer-htmlnano": "^2.0.0",
    "@parcel/packager-html": "^2.0.0",
    "@parcel/transformer-html": "^2.0.0",
    "@parcel/transformer-posthtml": "^2.0.0",
    "@parcel/transformer-typescript-tsc": "^2.0.0",
    "@parcel/validator-typescript": "^2.0.0",
    "@twurple/auth": "^5.1.6",
    "@twurple/chat": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "app-root-path": "^3.0.0",
    "classnames": "^2.3.1",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "nodecg-types": "^1.8.3",
    "parcel": "^2.0.0",
    "preact": "^10.0.0",
    "prettier": "^2.2.1",
    "tiltify-api-client": "^1.1.2",
    "typescript": "^4.2.0",
    "use-nodecg": "^0.4.1-1"
  },
  "nodecg": {
    "compatibleRange": "^1.1.1",
