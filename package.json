{
  "name": "theraceagainsttime-twitch-layouts",
  "version": "0.0.1",
  "description": "HTML-based OBS layouts and widgets for the Race Against Time's stream",
  "repository": "git@github.com:nt3rp/theraceagainsttime-twitch-layouts.git",
  "author": "Nick Terwoord <me@nt3rp.io>",
  "license": "MIT",
  "scripts": {
    "watch:dashboard": "parcel watch 'src/dashboard/*.html' --dist-dir='dashboard' --public-url='.'",
    "build:dashboard": "parcel build 'src/dashboard/*.html' --dist-dir='dashboard' --public-url='.'",
    "watch:graphics": "parcel watch 'src/graphics/*.html' --dist-dir='graphics' --public-url='.'",
    "build:graphics": "parcel build 'src/graphics/*.html' --dist-dir='graphics' --public-url='.'"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  },
  "devDependencies": {
    "@parcel/optimizer-htmlnano": "^2.0.0-beta.3.1",
    "@parcel/packager-html": "^2.0.0-beta.3.1",
    "@parcel/transformer-html": "^2.0.0-beta.3.1",
    "@parcel/transformer-posthtml": "^2.0.0-beta.3.1",
    "@parcel/transformer-typescript-tsc": "^2.0.0-beta.3.1",
    "@parcel/validator-typescript": "^2.0.0-beta.3.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "app-root-path": "^3.0.0",
    "classnames": "^2.3.1",
    "concurrently": "^6.2.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0",
    "parcel": "^2.0.0-beta.3.1",
    "preact": "^10.0.0",
    "prettier": "^2.2.1",
    "tiltify-api-client": "^1.1.2",
    "typescript": "^4.2.0",
    "use-nodecg": "^0.4.1-1"
  },
  "nodecg": {
    "compatibleRange": "^1.1.1",
    "graphics": [
      {
        "file": "main.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "dashboardPanels": [
      {
        "name": "achievements",
        "title": "Achievements",
        "file": "achievements.html",
        "width": 4,
        "workspace": "The Race Against Time VII"
      },
      {
        "name": "timer",
        "title": "Timer",
        "file": "timer.html",
        "width": 3,
        "workspace": "The Race Against Time VII"
      },
      {
        "name": "checkpoints",
        "title": "Checkpoints",
        "file": "checkpoints.html",
        "width": 3,
        "workspace": "The Race Against Time VII"
      },
      {
        "name": "guests",
        "title": "Guests",
        "file": "guests.html",
        "width": 3,
        "workspace": "The Race Against Time VII"
      }
    ],
    "soundCues": [
      {
        "name": "donation",
        "channels": 1
      },
      {
        "name": "follow"
      },
      {
        "name": "raid"
      },
      {
        "name": "host"
      },
      {
        "name": "generic"
      }
    ]
  }
}
